
{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://sara-and-dans.company.com/shipment.schema.json",
    "title": "Shipment",
    "description": "Ship an order.",
    "type": "object",
    "properties": {
      "productId": {"type": "integer", 
        "minimum": 1000},
      "name": {"type": "string"},
      "addr": {"type": "string"},
      "zip": {"type": "string"}
    },
    "additionalProperties": false,
    "required": [
      "productId",
      "name",
      "addr",
      "zip"
    ]
  }